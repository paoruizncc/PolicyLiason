modules = ["nodejs-20", "web"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Astro Dev Server"

[[workflows.workflow]]
name = "Astro Dev Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "yarn run dev"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80

[deployment]
build = ["sh", "-c", "astro build"]
deploymentTarget = "static"
publicDir = "dist"
